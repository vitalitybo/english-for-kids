{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      },
      "alias": {
        "map": [
          ["@", "./src"],
          ["@modules", ".src/modules/"]
        ]
      }
    }
  },
  "rules":{
    "linebreak-style": 0,
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["item"] }]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "parser": "babel-eslint" 
}
